  "paths": {
    "/cars": {
      "get": {
        "tags": [
          "Cars"
        ],
        "summary": "Retorna uma lista de carros cadastrados.",
        "description": "This endpoint will return a user by id...",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Cars"
        ],
        "summary": "Cria um novo carro no banco de dados.",
        "description": "Esse endpoint espera receber dados referentes a um carro para que seu cadastro seja realizado na plataforma.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/bodyCar"
              }
            }
          }
        }
      }
    },
    "/cars/{id}": {
      "put": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
