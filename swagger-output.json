      "get": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "bodyCar": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "McLaren"
          },
          "image": {
            "type": "string",
            "example": "https://static.wikia.nocookie.net/pedrofilms-inc/images/7/75/3240px-McLaren_P1.jpg/revision/latest?cb=20230510135230&path-prefix=pt-br"
          },
          "price": {
            "type": "number",
            "example": 100000
          },
          "category": {
            "type": "string",
            "example": "deluxe"
          },
          "transmission": {
            "type": "string",
            "example": "automatic"
          },
          "fuel": {
            "type": "string",
            "example": "gasolina"
          },
          "seats": {
            "type": "number",
            "example": 2
          },
          "available": {
            "type": "boolean",
            "example": true
          }
        },
        "required": [
          "name",
          "image",
          "price",
          "category",
          "transmission",
          "fuel",
          "seats",
          "available"
        ]
      },
      "someResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Jhon Doe"
          },
          "age": {
            "type": "number",
            "example": 29
          },
          "diplomas": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "school": {
                  "type": "string",
                  "example": "XYZ University"
                },
                "year": {
                  "type": "number",
                  "example": 2020
                },
                "completed": {
                  "type": "boolean",
                  "example": true
                },
                "internship": {
                  "type": "object",
                  "properties": {
                    "hours": {
                      "type": "number",
                      "example": 290
                    },
                    "location": {
                      "type": "string",
                      "example": "XYZ Company"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "someEnum": {
        "type": "string",
        "enum": [
          "red",
          "yellow",
          "green"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
